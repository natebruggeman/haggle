
<%- include ../head.ejs %>
<title> Haggle </title>
</head>
<body>

	<header>
		<nav>
			<ul id='navmenu'>
				<a href="/featureditems">Home</a>
				<a href="/featureditems/new">Sell</a>
				<a href="/profile/<%=userId%>"><%=username%></a>
				<a href="/auth/logout">Logout</a>
			</ul>
		</nav>
	</header>
	<title></title>
	<div class="container">
		<div class="row">
			<div class="col-md-8">
				<br/>
				<h1><%=item.title%></h1>
				<hr>

				<h4>Sold By: <%=item.seller%></h4>
				<h3>List Price: $<%=item.price%></h3>
				<h3>Item Description:<hr> <%=item.description%></h3>
			</div>
			<div class="col-md-4">
				<img class="showimage" src="<%=item.image%>" style= width:225px;height300px>
			</div>
		</div>



		<% if(item.seller === username) {%>
			<section>
				<form action="/featureditems/<%=item.id%>/edit">
					<button type="submit">Edit</button>
				</form>
			</section>

			<section>
				<form action = "/featureditems/<%= item.id%>?_method=DELETE" method="POST">
					<button type="submit">Delete Listing</button>
				</form>
			</section>
			<%} else {%>


			<section>
				<form action="/featureditems/<%=item.id%>/buy">
					<button type="submit">Buy Now
					</button>
				</form>
			</section>

<%}%>
</div>

</body>
</html>
