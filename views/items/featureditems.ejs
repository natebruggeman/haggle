      <div style="margin-left:80px;">
        <h2>Hoverable Sidenav Buttons</h2>
        <p>Hover over the buttons in the left side navigation to open them.</p>
      </div>
    </section>
    <main>
      <p>This will be our main page!!</p>

      <ul>
        <% for (let i = 0; i < items.length; i++){%>
             <li>
              <a href="/featureditems/<%=items[i]._id%>">
              <%=items[i].title %>
             </a></li>
             <li>$<%=items[i].price %></li>
             <li><%=items[i].description %></li><br/>
        <%}%>
      </ul>

    </main>
  </body>
</html>
